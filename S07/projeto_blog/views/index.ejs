<%- include('includes/header') %>
<%- include('includes/navbarHome') %>

<body>

  <div class="jumbotron text-center">
    <h1 class="display-4"> Bem-vindo! </h1>
    <p class="lead"> Este é um simples exemplo de blog. </p>
    <hr class="my-4">
    <p> Descrição detalhada aqui. </p>
    <a class="btn btn-primary btn-lg" href="#" role="button"> Leia mais </a>
  </div>

  <hr>

  <div class="container text-center">
    <% articles.forEach(article => { %>
    <div class="card">
      <div class="card-header">
        <h3> <%= article.title %> </h3>
      </div>
      <div class="card-body">
        <a href="/<%= article.slug %>" class="btn btn-success"> Ler artigo </a>
      </div>
    </div> <br>
    <% }) %>

    <div class="row">
      <div class="col col-12">
        <a style="float:right" href="/articles/page/2"> Próximo...</a>
      </div>
      <hr>
    </div>
    <hr>
  </div>

</body>

<%- include('includes/footer') %>